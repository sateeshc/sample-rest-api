<ruleset name="mule4globalruleset">
       <exclude-pattern>.*/src/main/mule/.*</exclude-pattern>
        <exclude-pattern>.*/src/main/resources/.*</exclude-pattern>
        <exclude-pattern>.*/pom.xml</exclude-pattern>
        <include-pattern>.*/src/main/mule/global.xml</include-pattern>
    <rule name="AutoDiscoveryShouldBeUsedForApis"
        language="xml"
        message="AutoDiscovery should be used to register the app in API manager"
        class="net.sourceforge.pmd.lang.xml.rule.DomXPathRule">
        <description>
            AutoDiscovery should be used to register the app in API manager
        </description>
        <priority>3</priority>
        <properties>
            <property name="xpath">
                <value>
                    <![CDATA[
                    count(//mule:mule/*:autodiscovery)=0
                    ]]>
                </value>
            </property>
        </properties>
    </rule>
</ruleset>
